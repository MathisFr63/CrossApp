<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CrossApp.LoginPage" xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Margin="50, 0 , 50, 0">
            <!-- Login -->
            <StackLayout>
                <Label Text="Login : " />
                <Entry Text="{Binding Login}" />
            </StackLayout>
            <!-- Password -->
            <StackLayout>
                <Label Text="Password : " />
                <Entry Text="{Binding Password}" IsPassword="true"/>
            </StackLayout>
            <!-- Buttons -> Sign in / Sign up -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Text="Sign in" Clicked="btnSignIn_Clicked" />
                <Button Text="Sign up" Clicked="btnSignUp_Clicked" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>